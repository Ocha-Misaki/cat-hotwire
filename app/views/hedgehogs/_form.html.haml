= form_with(model: hedgehog) do |form|
  - if hedgehog.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(hedgehog.errors.count, "error")
        prohibited this hedgehog from being saved:
      %ul
        - hedgehog.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :age, style: "display: block"
    = form.number_field :age
  %div
    = form.submit
